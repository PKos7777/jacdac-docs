{
  "@type": "Interface",
  "@id": "dtmi:jacdac:services:x0;1",
  "displayName": "Control",
  "description": {
    "en": "Control service is always service index `0`.\nIt handles actions common to all services on a device.\n\nNote: some of the optional features (including `flood_ping`, `mcu_temperature`, and all string registers)\nare not implemented in `8bit` version."
  },
  "contents": [
    {
      "@type": [
        "Property",
        "TimeSpan"
      ],
      "name": "reset_in",
      "@id": "dtmi:jacdac:x0:rw:resetin;1",
      "description": {
        "en": "When set to value other than `0`, it asks the device to reset after specified number of microseconds.\nThis is typically used to implement watchdog functionality, where a brain device sets `reset_in` to\nsay 1.6s every 0.5s."
      },
      "unit": "microsecond",
      "schema": "integer",
      "writable": true
    },
    {
      "@type": "Property",
      "name": "device_description",
      "@id": "dtmi:jacdac:x0:const:devicedescription;1",
      "description": {
        "en": "Identifies the type of hardware (eg., ACME Corp. Servo X-42 Rev C)"
      },
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "product_identifier",
      "@id": "dtmi:jacdac:x0:const:productidentifier;1",
      "description": {
        "en": "A numeric code for the string above; used to identify firmware images and devices."
      },
      "schema": "integer"
    },
    {
      "@type": "Property",
      "name": "bootloader_product_identifier",
      "@id": "dtmi:jacdac:x0:const:bootloaderproductidentifier;1",
      "description": {
        "en": "Typically the same as `product_identifier` unless device was flashed by hand; the bootloader will respond to that code."
      },
      "schema": "integer"
    },
    {
      "@type": "Property",
      "name": "firmware_version",
      "@id": "dtmi:jacdac:x0:const:firmwareversion;1",
      "description": {
        "en": "A string describing firmware version; typically semver."
      },
      "schema": "string"
    },
    {
      "@type": "Telemetry",
      "name": "mcu_temperature",
      "@id": "dtmi:jacdac:x0:ro:mcutemperature;1",
      "description": {
        "en": "MCU temperature in degrees Celsius (approximate)."
      },
      "schema": "integer"
    },
    {
      "@type": [
        "Telemetry",
        "TimeSpan"
      ],
      "name": "uptime",
      "@id": "dtmi:jacdac:x0:ro:uptime;1",
      "description": {
        "en": "Number of microseconds since boot."
      },
      "unit": "microsecond",
      "schema": "integer"
    },
    {
      "@type": "Property",
      "name": "device_url",
      "@id": "dtmi:jacdac:x0:const:deviceurl;1",
      "description": {
        "en": "Request the information web site for this device"
      },
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "device_specification_url",
      "@id": "dtmi:jacdac:x0:const:devicespecificationurl;1",
      "description": {
        "en": "URL pointing to device JSON specification."
      },
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "firmware_url",
      "@id": "dtmi:jacdac:x0:const:firmwareurl;1",
      "description": {
        "en": "URL with machine-readable metadata information about updating device firmware"
      },
      "schema": "string"
    }
  ],
